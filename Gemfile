gem 'cancan'

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.1.2'

# Use unicorn as the app server
gem 'unicorn'

group :developemnt, :test do
  gem 'delorean'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'simplecov-rcov'
  gem 'spork', '1.0.0rc3'
  gem 'guard'
  gem 'guard-spork'
