
h1 {
  font-size: 3em;
  letter-spacing: -2px;
  text-align: center;
  margin-bottom: 50px;
}

.bg {
  -webkit-background-size: 100% 100%;
  background-color: rgb(238, 174, 147);
  background-image: url('<%= asset_path("background_4.jpg") %>');
  background-size: 100% 100%;
  bottom: 0px;
  color: rgb(40, 40, 40);
  display: block;
  font-family: 'Hiragino Sans GB', 'Hiragino Sans GB W3', 'Microsoft YaHei', '微软雅黑';
  font-size: 14px;
  left: 0px;
  line-height: 28px;
  margin: 0px;
  padding: 0px;
  position: fixed;
  right: 0px;
  top: 0px;
  width: 100%;
}

.p-bd {
  color: rgb(40, 40, 40);
  display: block;
  font-family: 'Hiragino Sans GB', 'Hiragino Sans GB W3', 'Microsoft YaHei', '微软雅黑';
  font-szie: 14px;
  line-height: 28px;
  margin-top: 50px;
  position: relative;
}

.g-hd {
  color: rgb(255, 255, 255);
  display: block;
  font-family: 'Hiragino Sans GB', 'Hiragino Sans GB W3', 'Microsoft YaHei', '微软雅黑';
  font-size: 14px;
  height: 196px;
  line-height: 28px;
  margin: 0px;
  padding: 0px 0px 0px 20px;
  text-align: center;
  text-shadow: rgba(0, 0, 0, 0.2) 0px 2px 4px;
  width: 100%;
}

.img-circle {
  margin-bottom: 20px;
}

.g-mn {
  -webkit-background-clip: border-box;
  -webkit-backgtound-origin: padding-box;
  -webkit-background-size: auto;
  background-attachment: scroll;
  background-clip: border-box;
  background-color: rgb(255, 255, 255);
  background-image: none;
  background-origin: padding-box;
  background-size: auto;
  color: rgb(40, 40, 40);
  display: block;
  font-family: 'Hiragino Sans GB', 'Hiragino Sans GB W3', 'Microsoft YaHei', '微软雅黑';
  font-size: 14px;
  line-height: 28px;
  margin-top: 120px;
  padding: 0px;
  width: 100%;
}

.blog {
  margin: 120px 0;
}

.blog-title {
  text-align: center;
}

.blog-body {
  display:block;
  text-align: left;
  overflow: hidden;
  /*max-height: 290px;*/
}

.user-label {
  margin-right: 20px;
}

.new-blog {
  height: 600px;
}

.new-blog-title {
  width: 100%;
  height: 42px;
  font-size: 20px;
  margin-bottom: 15px;
  text-align: center;
}

.new-blog-tag {
  margin-bottom: 10px;
}

.new-blog-section {
  height: 37px;
}

.blog-tags, .blog-sections{
  float: left;
  width: 49%;
}

.blog-tags {
  margin-right: 2%;
}

.blog-label {
  margin: 40px 0 10px 0;
}

.btn-save {
  margin-top: 10px;
  width: 75%;
  height: 60px;
  float: left;
}

.btn-cancel {
  margin-top: 10px;
  margin-left:2%;
  width: 23%;
  height: 60px;

  padding-top: 18px;
}

ul.token-input-list-facebook {
  margin-bottom: 10px;
  display: block;
  width: 100%;
  padding: 4px;
  font-size: 12px;
  color: #555555;
  background-color: white;
  background-image: none;
  border: 1px solid #cccccc;
  border-radius: 4px;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
  -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
}

.blog-show {
  margin: 60px 0;
}

code {

}

.blog_index {
  list-style-type: none;
}

.blog_index li {
  background-color: rgb(83, 24, 30);
  margin-bottom: 1px;
}

.panel {
  margin-top: 120px;
  width: 100%;
}

.list-group {
  margin: 0;
}